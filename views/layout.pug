doctype html
html
  head
    title XeBRA Data Acquisition
    // js
    script(src="/modules/jquery/dist/jquery.js" type="text/javascript")
    script(src="/modules/highcharts/highcharts.js" type="text/javascript")
    script(src="javascripts/nodiaq_script.js" type="text/javascript")
    //script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
    script(src="/modules/bootstrap/dist/js/bootstrap.bundle.js" type="text/javascript")
    // css
    link(rel="stylesheet", href="/stylesheets/nodiaq_style.css")
    link(rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous")

    meta(name="theme-color" content="#D6063C")
    link(rel="apple-touch-icon-precomposed" sizes="57x57" href="/images/apple-touch-icon-57x57.png")
    link(rel="apple-touch-icon-precomposed" sizes="114x114" href="/images/apple-touch-icon-114x114.png")
    link(rel="apple-touch-icon-precomposed" sizes="72x72" href="/images/apple-touch-icon-72x72.png")
    link(rel="apple-touch-icon-precomposed" sizes="144x144" href="/images/apple-touch-icon-144x144.png")
    link(rel="apple-touch-icon-precomposed" sizes="60x60" href="/images/apple-touch-icon-60x60.png")
    link(rel="apple-touch-icon-precomposed" sizes="120x120" href="/images/apple-touch-icon-120x120.png")
    link(rel="apple-touch-icon-precomposed" sizes="76x76" href="/images/apple-touch-icon-76x76.png")
    link(rel="apple-touch-icon-precomposed" sizes="152x152" href="/images/apple-touch-icon-152x152.png")
    link(rel="icon" type="image/png" href="/images/favicon-196x196.png" sizes="196x196")
    link(rel="icon" type="image/png" href="/images/favicon-96x96.png" sizes="96x96")
    link(rel="icon" type="image/png" href="/images/favicon-32x32.png" sizes="32x32")
    link(rel="icon" type="image/png" href="/images/favicon-16x16.png" sizes="16x16")
    link(rel="icon" type="image/png" href="/images/favicon-128.png" sizes="128x128")
    meta(name="application-name" content=`${pagetitle}`)
    meta(name="msapplication-TileColor" content="#D6063C")
    meta(name="msapplication-TileImage" content="/images/mstile-144x144.png")
    meta(name="msapplication-square70x70logo" content="/images/mstile-70x70.png")
    meta(name="msapplication-square150x150logo" content="/images/mstile-150x150.png")
    meta(name="msapplication-wide310x150logo" content="/images/mstile-310x150.png")
    meta(name="msapplication-square310x310logo" content="/images/mstile-310x310.png")

    block extrahead
  body
    div.wrapper
      nav#sidebar.colored.active
        img.logo.p-2(src="/images/logo.png")
        ul.list-unstyled.components
          li#lindex
            a(href="/")
              i.fas.fa-pastafarianism
              span Overview
          br
          li#lcontrol
            a(href='/control')
              i.fa.fa-wrench
              span Control
          li#lruns
            a(href='/runsui')
              i.fas.fa-running
              span Runs
          li#loptions
            a(href='/options')
              i.fa.fa-cogs
              span Config
          li#llog
            a(href='/logui')
              i.fa.fa-book-open
              span Log
          br
          br
          li.colored.signout(style="background-color:#06d6a0" hidden=hide_login)
            a(href="/logout")
              i.far.fa-hand-peace
              span Sign Out
      div#content
        nav#errorbar
          h5
            i.fa.fa-exclamation-triangle
            span &nbsp; There are unacknowledged errors. Please go to the &nbsp
            a(href='/logui') log page
            span &nbsp to close them
        block content

    script.
      $(document).ready(function(){
        setInterval(CheckForErrors, 5000);
        FillDetectorInfo();
        setInterval(FillDetectorInfo, 5000);
        FillDAQStatusInfo();
        setInterval(FillDAQStatusInfo, 5000);
      });
