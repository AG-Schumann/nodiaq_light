extends layout
block extrahead
  link(rel="stylesheet", href="stylesheets/jquery-ui.min.css")
  link(rel="stylesheet", href="stylesheets/tabulator_simple.min.css")
  script(src="javascripts/jquery-ui.min.js" type="text/javascript")
  script(src="javascripts/logui_script.js", type="text/javascript")
  script(src="javascripts/tabulator.min.js" type="text/javascript")

block content     
  div.main-container(style="width:100%;padding:25")
    form(action="/logui/new_log_message", method="post")
      div.input-group.mb-3#newentry(style='padding-top:5px')
        input.form-control(type="text", name="entry", placeholder="New Log Entry...")
        div.input-group-append
          button.btn.btn-outline-secondary(type="submit") Enter

    table#log_table(style="width:100%;height:100%")


  script.
    var priorities=["DEBUG", "MESSAGE","WARNING", "ERROR", "FATAL"];
    document.newest_log = null;
    document.newest_run=-1;
    document.first_update = false;
    $(document).ready(function () {
      DrawActiveLink("#llog");
      InitializeTable("#log_table");
      UpdateLogTable("#log_table");
     });
     