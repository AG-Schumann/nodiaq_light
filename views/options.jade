extends layout

block content
  link(rel="stylesheet" href="/je/jsoneditor.min.css")
  script(src="javascripts/options_scripts.js" type="text/javascript")
  script(src="/je/jsoneditor.min.js" type="text/javascript")
  div.container
    br
    div.row(style="height:50px")
       div.col-xs-6.col-sm-3
         select.form-control(id='mode_select')
       div.col-xs-6.col-sm-3
         button#fetch_mode_button.btn.brn-info(onclick="FetchMode('mode_select')") Fetch
    br
    div#json_text(style="width:90%;")
    br
    button.btn.btn-info(onclick="SubmitMode()") Add/Update
    button.btn.btn-danger(onclick="RemoveMode('mode_select')") Delete (careful!)

  script.

    $(document).ready(function () {
      DrawActiveLink("#loptions");
      document.jsoneditor = new JSONEditor(document.getElementById("json_text"), {});
      PopulateModeList("mode_select");
    });
