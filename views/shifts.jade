extends layout

block content
  script(src="javascripts/shift_scripts.js" type="text/javascript")
  link(rel="stylesheet" href="stylesheets/bootstrap-select.min.css")
  script(src="javascripts/jsoneditor.min.js" type="text/javascript")
  script(src="javascripts/bootstrap-select.min.js" type="text/javascript")
  link(rel="stylesheet" href="stylesheets/bootstrap-select.min.css")
  
  div.main-container(style="height:100%")
    ul.nav.nav-tabs#shiftNavTab(role="tablist")
      li.nav-item
        a.nav-link.active#overview-tab(data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true") Overview
      li.nav-item
        a.nav-link#calendar-tab(data-toggle="tab" href="#calendar" role="tab" aria-controls="calendar" aria-selected="false") Calendar
      li.nav-item
        a.nav-link#rules-tab(data-toggle="tab" href="#rules" role="tab" aria-controls="rules" aria-selected="false") Rules
    div.tab-content#tabContent
      div.tab-pane.fade.show.active#overview(role="tabpanel" aria-labelledby="overview-tab")
        span The overview will be here
      div.tab-pane.fade#calendar(role="tabpanel" aria-labelledby="calendar-tab")
        span The calendar will go here
      div.tab-pane.fade#rules(role="tabpanel" aria-labelledby="rules-tab")
        p You can view the shift responsibility and rules here. The shift administrator can also set the rules for current and past years.
        div.row(style="height:50px")
          div.col-xs-6.col-sm-3
            select.form-control(id='rule_year_select' title='Choose a year' disabled)
          div.col-xs-6.col-sm-3
            button#fetch_mode_button.btn.btn-info(onclick="FetchMode('run_mode_select')") Fetch
        br
        div#json_text(style="width:100%;height:60%")
        br
        button.btn.btn-default(onclick="SubmitMode()") Add/Update
        span &nbsp;
        button.btn.btn-danger(onclick="RemoveMode('rule_year_select')") Delete (be very careful!)
   

  script.

    $(document).ready(function () {
      console.log("oh bother");
    });
